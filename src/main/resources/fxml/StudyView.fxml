<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.StudyController"
            prefWidth="600" prefHeight="400"
            style="-fx-background-color: #202020;">

    <top>
        <VBox style="-fx-background-color: #1a1a1a; -fx-padding: 20; -fx-border-color: #333333; -fx-border-width: 0 0 1 0;">
            <Label text="The game is starts!"
                   style="-fx-text-fill: #a9a9a9; -fx-font-size: 28; -fx-font-weight: bold;"/>
            <Label text="Click the card to flip"
                   style="-fx-text-fill: #00ffff; -fx-font-size: 16;-fx-font-weight: bold;"/>
        </VBox>
    </top>


    <center>
        <StackPane fx:id="cardContainer" alignment="CENTER">
            <Label fx:id="cardLabel"
                   wrapText="true"
                   text="CARD"
                   style="-fx-font-size: 28;
                          -fx-padding: 20;
                          -fx-background-color: #b1fdfd;
                          -fx-text-fill: #020000;
                          -fx-background-radius: 15;
                          -fx-font-weight: bold;
                          -fx-border-color: #ffffff;
                           -fx-border-width: 10;
                            -fx-border-style: solid;
                           -fx-border-radius: 15;
"
                   prefWidth="400" prefHeight="200"
                   alignment="CENTER"/>
        </StackPane>
    </center>


    <bottom>
        <HBox spacing="20" alignment="CENTER" style="-fx-padding: 20;">
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="knewButton" text="I knew it" onAction="#onKnew" visible="false"
                    style="-fx-background-color: green; -fx-text-fill: white; -fx-font-size: 18; -fx-background-radius: 15;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="didntKnowButton" text="I didn't know it" onAction="#onDidntKnow" visible="false"
                    style="-fx-background-color: red; -fx-text-fill: white; -fx-font-size: 18; -fx-background-radius: 15;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="closeButton" text="Close" onAction="#onClose" visible="false"
                    style="-fx-background-color: #ed0909; -fx-text-fill: white; -fx-font-size: 18; -fx-background-radius: 15;"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </bottom>

</BorderPane>
