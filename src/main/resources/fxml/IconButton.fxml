<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<Button xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
        fx:controller="components.IconButtonController"
        style="-fx-background-color: transparent; -fx-text-fill: #ffffff;"
        fx:id="iconButton">
    <graphic>
        <ImageView fitHeight="47" fitWidth="47">
            <Image url="@../icons/list.png"/>
        </ImageView>
    </graphic>
    <tooltip>
        <Tooltip text="List"/>
    </tooltip>
</Button>
